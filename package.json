{
  "name": "ccs-calculator",
  "version": "1.0.0",
  "description": "Child Care Subsidy (CCS) Calculator for Australian parents",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "dev": "npm run start:all",
    "start": "swa start src --api-location api",
    "start:all": "concurrently --names \"FRONTEND,API\" --prefix-colors \"cyan,yellow\" \"npm run start:frontend\" \"npm run start:api\"",
    "start:frontend": "npx serve src -p 3000",
    "start:api": "cd api && func start --port 7071",
    "install:all": "npm install && cd api && npm install",
    "lint": "echo \"No linting configured yet\" && exit 0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/js/**/*.js"
    ]
  },
  "keywords": [
    "childcare",
    "subsidy",
    "calculator",
    "australia",
    "ccs"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "serve": "^14.2.1"
  },
  "dependencies": {
    "chart.js": "^4.5.1"
  }
}
